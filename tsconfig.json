{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "types": ["@overwolf/types", "node"],
        "rootDirs": ["./src"]
    },
    "exclude": ["node_modules"]
}
